<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/iron"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="415dp"
        android:layout_height="118dp"
android:background="@color/iron"
        android:layout_margin="4dp">

        <ImageButton
            android:id="@+id/btn_delete_cart"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="67dp"
            app:srcCompat="@android:drawable/ic_delete" />

        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@+id/textView2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/decrease_qty_cart"
                android:layout_width="42dp"
                android:layout_height="41dp"

                android:text="-" />

            <TextView
                android:id="@+id/integer_number_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/decrease_qty_cart"
                android:text="0"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/increase_qty_cart"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_toEndOf="@+id/integer_number"
                android:text="+" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:text="Qty : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            android:layout_marginStart="210dp"
            android:text="Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginStart="1dp"

            android:layout_toEndOf="@+id/textView3"
            android:text="LE" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="0dp"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>